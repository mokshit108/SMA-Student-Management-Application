@model Crudapp.Models.CourseView

@{
    ViewData["Title"] = "Create Course";
}

<h1>@ViewData["Title"]</h1>

<hr />



<div class="row">
    <div class="col-md-4">
        <form asp-action="CAdd" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <input type="hidden" asp-for="CId" />

            <input type="hidden" asp-for="DepId" />

            <div class="form-group" required>
                <label asp-for="CCode" class="control-label">Course Code</label>
                <input asp-for="CCode" class="form-control" />
                <span asp-validation-for="CCode" class="text-danger"></span>
            </div>
            <div class="form-group" required>
                <label asp-for="CName" class="control-label">Course Name</label>
                <input asp-for="CName" class="form-control" />
                <span asp-validation-for="CName" class="text-danger"></span>

            </div>
            <!--<div class="form-group" required>
                <label asp-for="DepCode" class="control-label">Department Code</label>
                <input asp-for="DepCode" class="form-control" />
                <span asp-validation-for="DepCode" class="text-danger"></span>
            </div>-->


            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary rounded-sm" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
