
@model Crudapp.Models.CourseView

@{
    ViewData["Title"] = "Update Course";
}

<h1>@ViewData["Title"]</h1>




<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CEdit" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CId" />


            <div class="form-group" required>
                <label asp-for="CCode" class="control-label"></label>
                <input id="coval" asp-for="CCode" class="form-control" />
                <span asp-validation-for="CCode" class="text-danger"></span>

            </div>
            <!-- <input type="hidden" name="Code" value="Course.CCode" />-->

            <div class="form-group" required>
                <label asp-for="CName" class="control-label"></label>
                <input asp-for="CName" class="form-control" />
                <span asp-validation-for="CName" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary rounded-sm" asp-action="Index">Back</a>

</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#coval").attr("data-val", false);



        $("#coval").on('change' , function () {
            $("[data-val='true']").attr('data-val', 'false');
            console.log("hi");
           // $("#coval").attr("data-val", true);
        });

    });
</script>

