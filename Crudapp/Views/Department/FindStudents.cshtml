@model System.Data.DataTable

@{
    ViewData["Title"] = "List Of Students";
}


<div class="jumbotron bg-secondary text-white">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>



<table class="table table-bordered ">
    <thead class="thead-light">
        <tr>
            <th>
                Student Roll
            </th>
            <th>
                Student Name
            </th>
            <th>
                Age
            </th>

            <th>
               Actions
            </th>

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {

        <tr>
            <td>
                @Model.Rows[i]["SRollno"]
            </td>
            <td>
                @Model.Rows[i]["SName"]
            </td>

            <td>
                @Model.Rows[i]["Age"]
            </td>
            <td>
                <a class="btn btn-info btn-sm"asp-action="SAdd" asp-route-id="@Model.Rows[i]["CId"]">Create New</a> 
                <a class="btn btn-secondary btn-sm" asp-action="SEdit" asp-route-id="@Model.Rows[i]["StudentId"]">Edit</a> 
                <a class="btn btn-danger btn-sm" asp-action="SDelete" asp-route-id="@Model.Rows[i]["StudentId"]">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
