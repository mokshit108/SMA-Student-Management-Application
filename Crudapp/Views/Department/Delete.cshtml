@model Crudapp.Models.DepartmentView

@{
    ViewData["Title"] = "Delete Department";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DName)
        </dd>
       
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DepId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a  class="btn btn-secondary rounded-sm" asp-action="Index">Back</a>
    </form>
</div>
