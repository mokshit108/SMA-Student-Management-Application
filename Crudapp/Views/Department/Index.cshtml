@model System.Data.DataTable

@{
    ViewData["Title"] = "List Of Department";
}
<div class="jumbotron bg-info text-white">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>



<table class="table table-bordered ">
    <thead class="thead-light">
        <tr>
            
            <th>
                DepCode
            </th>
            <th>
                Department
            </th>
            <th>
                <a asp-action="AddOrEdit">Create New</a>
            </th>
            <th>
                Courses
            </th>

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {

        <tr>
           
            <td>
                @Model.Rows[i]["DepCode"]
               
            </td>
            <td>
                @Model.Rows[i]["DName"]
            </td>


            <td>
              
                <a class="btn btn-secondary btn-sm" asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["DepId"]">Edit</a> 
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@Model.Rows[i]["DepId"]">Delete</a>
            </td>

            <td>
                <a class="btn btn-primary btn-sm" asp-action="FindCourses" asp-route-id="@Model.Rows[i]["DepId"]">Courses</a>

            </td>

        </tr>
        }
    </tbody>
</table>
